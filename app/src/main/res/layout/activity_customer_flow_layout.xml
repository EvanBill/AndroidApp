<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_customer_flow_layout_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/str_click" />

    <TextView
        android:id="@+id/tv_customer_flow_layout_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/str_main_customer_flow_layout" />

    <ViewStub
        android:id="@+id/vs_customer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/customer_flow_layout" />

</LinearLayout>
